{
    "name": "storybook-typescript-starter",
    "version": "1.0.0",
    "description": "Starter project using Storybook, StoryShots, Jest and TypeScript",
    "main": "lib/src/index.ts",
    "typings": "lib/src/index.d.ts",
    "author": "Owen Pattison",
    "license": "MIT",
    "scripts": {
        "compile": "tsc",
        "test": "jest",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook"
    },
    "dependencies": {
        "react": "^16.8.6",
        "react-dom": "^16.8.6"
    },
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@storybook/addon-actions": "^6.0.26",
        "@storybook/addon-cssresources": "^6.0.26",
        "@storybook/addon-knobs": "^6.0.26",
        "@storybook/addon-links": "^6.0.26",
        "@storybook/addon-storyshots": "^6.0.26",
        "@storybook/addons": "^6.0.26",
        "@storybook/react": "^6.0.26",
        "@types/jest": "^24.0.15",
        "@types/storybook__addon-knobs": "^5.0.4",
        "@types/storybook__addon-storyshots": "^5.1.2",
        "@types/storybook__react": "^5.2.1",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.0.6",
        "jest": "^24.8.0",
        "react-docgen-typescript-loader": "^3.1.0",
        "react-test-renderer": "^16.8.6",
        "ts-jest": "^24.0.2",
        "typescript": "^3.5.2"
    },
    "jest": {
        "transform": {
            ".(jsx|ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "mapCoverage": true,
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/lib/"
        ],
        "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx|js|jsx)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ]
    }
}
